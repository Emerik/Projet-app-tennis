<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPersoBackground"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".IHM.MainActivityFragment"
        android:weightSum="1.0">

        <!--android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        -->

        <!--        Partie Bilan          -->
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativLayoutBilan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="@drawable/bordershadow"
            android:layout_weight="0.3"
            android:alpha="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Classement"
                android:id="@+id/textViewClassement"
                android:textColor="@color/colorUdacityGreen"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Victoire "
                android:id="@+id/textViewVictoire"
                android:textColor="@color/textColor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Défaite "
                android:textColor="@color/textColor"
                android:id="@+id/textViewDefaite"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Emerik"
                android:id="@+id/textView5"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black" />


        </RelativeLayout>

        <!--       Partie circle       -->
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:padding="5dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/simulationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Simulation classement"
                android:textSize="20sp"
                android:textColor="@android:color/black"

                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:id="@+id/btnLeftArrow"
                android:background="@drawable/btn_tennisrank"
                android:layout_alignTop="@+id/btnRightArrow"
                android:layout_alignParentStart="true"
                android:textSize="28sp" />

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:layout_marginLeft="50dp"
                android:id="@+id/donut_progress"
                android:layout_width="250dp"
                android:layout_height="250dp"
                custom:donut_progress="0"
                custom:donut_finished_color="@color/colorPerso"
                custom:donut_text_color="@color/colorPersoDark"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:id="@+id/btnRightArrow"
                android:background="@drawable/btn_tennisrank"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="selection type de simulation"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textAllCaps="true"
                />



        </RelativeLayout>

        <!-- Partie mode de simulation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:context=".IHM.MainActivityFragment"
            >
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/currentButton"
                android:background="@color/colorUdacity"
                android:textColor="@color/colorUdacityGreen"
                android:text="Actuel"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorUdacityGreen"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/futurButton"
                android:background="@color/colorUdacity"
                android:textColor="@color/colorUdacityGreen"
                android:text="Prévu"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorUdacityGreen"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/downButton"
                android:background="@color/colorUdacity"
                android:textColor="@color/colorUdacityGreen"
                android:text="Descente"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorUdacityGreen"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/upButton"
                android:background="@color/colorUdacity"
                android:textColor="@color/colorUdacityGreen"
                android:text="Monter"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>